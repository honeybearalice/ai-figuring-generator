
{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "server.js"
    },
    {
      "source": "/health",
      "destination": "server.js"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/",
      "permanent": true
    }
  ],
  "env": {
    "DOUBAO_API_KEY": "@doubao_api_key",
    "DOUBAO_MODEL": "@doubao_model",
    "DOUBAO_API_URL": "@doubao_api_url",
    "NODE_ENV": "production",
    "MAX_FILE_SIZE": "50",
    "UPLOAD_DIR": "uploads"
  }
}
